<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="stock_counted_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page" style='font-family: Montserrat, Saysettha OT;'>
                    <!-- <style>
                        table, td, th {
                            border: 1px solid #000;
                            font-family:Phetsarath OT;
                            padding: 8px;
                            font-size:14px
                        }
                        td{
                            height: 20px;
                            overflow: hidden;
                            vertical-align: middle;
                        }   
                        table {
                            width: 100%;
                            border-collapse: collapse;
                        }
                        .border {
                            border: 1px solid #000;
                        }
                    </style> -->

                    <div class="oe_structure"/>
                    <div class="text-center" style="font-size: 18px;font-weight: bold;">
                            <p>Stock Take Counted Report</p>
                    </div>
                    <div class="row w-100">
                        <div class="col-4"></div>
                        <div class="col-4"></div>
                        <div class="col-4 text-center">
                            <img t-if="header['location_no']" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', header['pda'], 600, 100)" style="width:400px;height:60px;"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span>Warehouse No: </span><t t-esc="header['pda']"/>
                        </div>
                        <div class="col-4">
                            <span>PDA No: </span><t t-esc="header['pda']"/>
                        </div>
                        <div class="col-4">
                            <span>Location No: </span><t t-esc="header['location_no']"/>
                        </div>
                    </div>
                    <br/>
                    <t t-set="i" t-value="1"/>
                    <table class="table table-sm w-100" style="font-size: 12px;">
                        <thead style="border-bottom: 2px solid #000;border-top: 2px solid #000;font-size: 13px;">
                            <tr height="25">
                                <th style="vertical-align:middle;text-align: center" rowspan="2">No</th>
                                <th style="vertical-align:middle;" rowspan="2">Location</th>
                                <th style="vertical-align:middle;text-align: center" colspan="3">Barcode</th>
                                <th style="vertical-align:middle" rowspan="2">Description</th>
                                <th style="vertical-align:middle;text-align: right" rowspan="2">Quantity</th>
                                <th style="vertical-align:middle;text-align: right" rowspan="2">Unit Cost</th>
                                <th style="vertical-align:middle;text-align: right" rowspan="2">Total Cost</th>
                                <th style="vertical-align:middle;text-align: center" rowspan="2">RECP</th>
                            </tr>
                            <tr>
                                <th style="vertical-align:middle;">Unit</th>
                                <th style="vertical-align:middle;">Pack</th>
                                <th style="vertical-align:middle;">Box</th>
                            </tr>
                        </thead>
                        
                        <tbody>
                            <t t-set="total_cost" t-value="0"/>
                            <t t-foreach="datas" t-as="data">
                                <tr>
                                    <td class="text-center"><t t-esc="i"/></td>
                                    <td><t t-esc="data['location_no']"/></td>
                                    <td><t t-esc="data['barcode']['bar_unit']"/></td>
                                    <td><t t-esc="data['barcode']['bar_pack']"/></td>
                                    <td><t t-esc="data['barcode']['bar_box']"/></td>
                                    <td><t t-esc="data['product_name']"/></td>
                                    <td class="text-right"><t t-esc="data['counted_qty']"/></td>
                                    <td class="text-right"><t t-esc="data['counted_amount']"/></td>
                                    <td class="text-right"><t t-esc="data['total_cost']"/></td>
                                    <td></td>
                                </tr>
                                <t t-set="i" t-value="i+1"/>
                            </t>
                            <tr style="border-top: 2px solid #000 !important;">
                                <td></td>
                                <td colspan='5' class="text-right font-weight-bold">Grand Total</td>
                                <td class="text-right font-weight-bold"><t t-esc="total['sum_counted_qty']"/></td>
                                <td class="text-right font-weight-bold"><t t-esc="total['sum_counted_amount']"/></td>
                                <td class="text-right font-weight-bold"><t t-esc="total['sum_total_cost_amount']"/></td>
                                <td></td>
                            </tr>
                        </tbody>
                        
                    </table>
                    <br/>
                    <br/>
                    <div class="row w-100 mt-3">
                        <div class="col-4 text-center">Verifier</div>
                        <div class="col-4 text-center">Corrector By</div>
                        <div class="col-4 text-center">Control Desk</div>
                    </div>
                    
                    <div class="footer" style='font-family: Montserrat, Saysettha OT;'>
                        <div class="row w-100 pt-2" style="font-size: 12px;">
                            <div class="col-12 text-right">
                                <strong>Page: <span class="page"/> of <span class="topage"/></strong>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>